<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simcoder.snapchatclone">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".loginRegistration.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".loginRegistration.ChooseLoginRegistrationActivity" />
        <activity android:name=".loginRegistration.LoginActivity" />
        <activity android:name=".loginRegistration.RegistrationActivity" />
        <activity android:name=".ShowCaptureActivity" />
        <activity android:name=".FindUsersActivity" />
        <activity android:name=".DisplayImageActivity" />
        <activity android:name=".ChooseReceiverActivity"></activity>
    </application>

</manifest>